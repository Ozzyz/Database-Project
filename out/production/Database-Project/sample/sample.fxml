<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Treningsdagbok v.0.1"
           GridPane.columnIndex="1"
           GridPane.rowIndex="0"
           textFill="blue"

    />
    <Button text="Registrer økt" onAction="#addSessionButtonClicked"
        GridPane.columnIndex="1"
        GridPane.rowIndex="1"/>
    <Button text="Legg til øvelse" onAction="#addExerciseButtonClicked"
        GridPane.columnIndex="1"
        GridPane.rowIndex="2"/>
    <Button text="Lag nytt program" onAction="#addNewProgramButtonClicked"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            />
    <Button text="Sjekk økt" onAction="#viewButtonClicked"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"
    />
</GridPane>