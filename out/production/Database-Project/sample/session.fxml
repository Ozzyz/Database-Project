<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<GridPane fx:controller="sample.sessionController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" >

    <Label GridPane.columnIndex="0" GridPane.rowIndex="0">Program: </Label>
    <ComboBox id="program" GridPane.columnIndex="1" GridPane.rowIndex="0"></ComboBox>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="1">Varighet: </Label>
    <TextField id="varighet" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Desimaltall"></TextField>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="2">Dato: </Label>
    <DatePicker id="dato" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="dd.mm.åååå"></DatePicker>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="3">Formål: </Label>
    <TextArea id="formål" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Desimaltall"></TextArea>

    <Button GridPane.columnIndex="0" GridPane.rowIndex="4" text="Avbryt"></Button>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="4" text="Registrer"></Button>


</GridPane>