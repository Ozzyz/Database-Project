<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.programController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="2" vgap="10" >
    <!--  TODO: One box where all exercises are listed, arrows to move an exercise over to the program    -->
    <Button GridPane.columnIndex="0" GridPane.rowIndex="0" text="Avbryt" onAction="#backButtonClicked"/>
    <TextField promptText="Programnavn" fx:id="programNameTextField"
        GridPane.rowIndex="0"
               GridPane.columnIndex="1"
    />
    <ListView fx:id="exerciseListView" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <ListView fx:id="programListView" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    <Button text="---|=" GridPane.columnIndex="2" GridPane.rowIndex="1"
        onAction="#addExerciseButtonClicked"
    />
    <Button text="=|---" GridPane.columnIndex="2" GridPane.rowIndex="2"
        onAction="#removeExerciseButtonClicked"
            />
    <Button text="Lagre" GridPane.columnIndex="0" GridPane.rowIndex="3" onAction="#saveButtonClicked"/>

</GridPane>